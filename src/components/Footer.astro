---
const year = new Date().getFullYear();
const contactEmail = import.meta.env.PUBLIC_CONTACT_EMAIL ?? "support@zenovee.com";
const socialX = import.meta.env.PUBLIC_SOCIAL_X;
const socialLinkedIn = import.meta.env.PUBLIC_SOCIAL_LINKEDIN;
const socialInstagram = import.meta.env.PUBLIC_SOCIAL_INSTAGRAM;
const socialFacebook = import.meta.env.PUBLIC_SOCIAL_FACEBOOK;
const socialYouTube = import.meta.env.PUBLIC_SOCIAL_YOUTUBE;
const socialTikTok = import.meta.env.PUBLIC_SOCIAL_TIKTOK;
---

<footer class="border-t border-white/10">
  <div class="container-pad py-12">
    <div class="grid gap-8 md:grid-cols-3">
      <div class="space-y-3">
        <a href="/" class="inline-flex items-center">
          <img
            src="/images/company/Zenovee-Logo.png"
            alt="Zenovee"
            class="h-8 w-auto"
            loading="lazy"
            decoding="async"
          />
          <span class="sr-only">Zenovee</span>
        </a>
        <p class="text-sm text-white/65">
          We build products and services that help brands sell personalized goods on Shopify—fast, reliable, and review-ready.
        </p>

        <div class="flex items-center gap-2 text-sm text-white/65">
          <svg class="h-4 w-4 shrink-0 text-white/50" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M21.75 7.5v9A2.25 2.25 0 0 1 19.5 18.75h-15A2.25 2.25 0 0 1 2.25 16.5v-9m19.5 0A2.25 2.25 0 0 0 19.5 5.25h-15A2.25 2.25 0 0 0 2.25 7.5m19.5 0v.243a2.25 2.25 0 0 1-1.07 1.916l-7.5 4.615a2.25 2.25 0 0 1-2.36 0l-7.5-4.615A2.25 2.25 0 0 1 2.25 7.743V7.5"
            ></path>
          </svg>
          <a class="text-white/65 hover:text-white" href={`mailto:${contactEmail}`}>{contactEmail}</a>
        </div>

        {(socialX || socialLinkedIn || socialInstagram || socialFacebook || socialYouTube || socialTikTok) && (
          <div class="flex flex-wrap gap-2 pt-1">
            {socialLinkedIn && (
              <a
                class="inline-flex h-9 w-9 items-center justify-center rounded-full border border-white/10 bg-white/[0.03] text-white/70 transition hover:bg-white/[0.06] hover:text-white"
                href={socialLinkedIn}
                target="_blank"
                rel="noreferrer"
                aria-label="LinkedIn"
                title="LinkedIn"
              >
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" class="h-5 w-5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-12h4v1.5"></path>
                  <rect x="2" y="9" width="4" height="12" rx="1"></rect>
                  <circle cx="4" cy="4" r="2"></circle>
                </svg>
                <span class="sr-only">LinkedIn</span>
              </a>
            )}

            {socialX && (
              <a
                class="inline-flex h-9 w-9 items-center justify-center rounded-full border border-white/10 bg-white/[0.03] text-white/70 transition hover:bg-white/[0.06] hover:text-white"
                href={socialX}
                target="_blank"
                rel="noreferrer"
                aria-label="X"
                title="X"
              >
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" class="h-5 w-5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M4 4l16 16"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" d="M20 4L4 20"></path>
                </svg>
                <span class="sr-only">X</span>
              </a>
            )}

            {socialInstagram && (
              <a
                class="inline-flex h-9 w-9 items-center justify-center rounded-full border border-white/10 bg-white/[0.03] text-white/70 transition hover:bg-white/[0.06] hover:text-white"
                href={socialInstagram}
                target="_blank"
                rel="noreferrer"
                aria-label="Instagram"
                title="Instagram"
              >
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" class="h-5 w-5">
                  <rect x="3" y="3" width="18" height="18" rx="5"></rect>
                  <path stroke-linecap="round" stroke-linejoin="round" d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37Z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" d="M17.5 6.5h.01"></path>
                </svg>
                <span class="sr-only">Instagram</span>
              </a>
            )}

            {socialFacebook && (
              <a
                class="inline-flex h-9 w-9 items-center justify-center rounded-full border border-white/10 bg-white/[0.03] text-white/70 transition hover:bg-white/[0.06] hover:text-white"
                href={socialFacebook}
                target="_blank"
                rel="noreferrer"
                aria-label="Facebook"
                title="Facebook"
              >
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" class="h-5 w-5">
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"
                  ></path>
                </svg>
                <span class="sr-only">Facebook</span>
              </a>
            )}

            {socialYouTube && (
              <a
                class="inline-flex h-9 w-9 items-center justify-center rounded-full border border-white/10 bg-white/[0.03] text-white/70 transition hover:bg-white/[0.06] hover:text-white"
                href={socialYouTube}
                target="_blank"
                rel="noreferrer"
                aria-label="YouTube"
                title="YouTube"
              >
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" class="h-5 w-5">
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M2.5 17a24.1 24.1 0 0 1 0-10 2 2 0 0 1 1.4-1.4 49.6 49.6 0 0 1 16.2 0 2 2 0 0 1 1.4 1.4 24.1 24.1 0 0 1 0 10 2 2 0 0 1-1.4 1.4 49.6 49.6 0 0 1-16.2 0 2 2 0 0 1-1.4-1.4Z"
                  ></path>
                  <path stroke-linecap="round" stroke-linejoin="round" d="M10 15l5-3-5-3v6Z"></path>
                </svg>
                <span class="sr-only">YouTube</span>
              </a>
            )}

            {socialTikTok && (
              <a
                class="inline-flex h-9 w-9 items-center justify-center rounded-full border border-white/10 bg-white/[0.03] text-white/70 transition hover:bg-white/[0.06] hover:text-white"
                href={socialTikTok}
                target="_blank"
                rel="noreferrer"
                aria-label="TikTok"
                title="TikTok"
              >
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8" class="h-5 w-5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 19a4 4 0 1 1 4-4V4c2 2 4 3 7 3v4c-3 0-5-1-7-3v7a6 6 0 1 1-4-5.65V19Z"></path>
                </svg>
                <span class="sr-only">TikTok</span>
              </a>
            )}
          </div>
        )}
      </div>

      <div class="grid grid-cols-2 gap-6 text-sm">
        <div class="space-y-2">
          <div class="font-semibold text-white/85">Products</div>
          <a class="block text-white/65 hover:text-white" href="/products/zenmerch">ZenMerch</a>
          <a class="block text-white/65 hover:text-white" href="/products">All products</a>
        </div>
        <div class="space-y-2">
          <div class="font-semibold text-white/85">Company</div>
          <a class="block text-white/65 hover:text-white" href="/company/about">About</a>
          <a class="block text-white/65 hover:text-white" href="/contact">Contact</a>
        </div>
      </div>

      <div class="space-y-2 text-sm">
        <div class="font-semibold text-white/85">Legal</div>
        <div class="space-y-2">
          <a class="block text-white/65 hover:text-white" href="/legal/privacy-policy">Privacy</a>
          <a class="block text-white/65 hover:text-white" href="/legal/cookie-policy">Cookies</a>
          <button
            class="block w-full text-left text-white/65 hover:text-white"
            type="button"
            data-cookie-preferences
          >
            Cookie settings
          </button>
          <a class="block text-white/65 hover:text-white" href="/legal/terms-of-service">Terms</a>
        </div>
      </div>
    </div>

    <div class="mt-10 border-t border-white/10 pt-6 text-left text-xs text-white/45">
      © {year} Zenovee. All rights reserved.
    </div>
  </div>
</footer>
