---
const siteName = import.meta.env.PUBLIC_SITE_NAME ?? "Zenovee";
const zencraftShopUrl = import.meta.env.PUBLIC_ZENCRAFT_SHOP_URL ?? "/shop";
const nav = [
  { label: "Home", href: "/" },
  { label: "Shop", href: "/shop" },
  { label: "Services", href: "/services" },
  { label: "Pricing", href: "/pricing" },
  { label: "Contact Us", href: "/contact" },
];

const products = [
  {
    name: "ZenMerch",
    badge: "App",
    desc: "Shopify product personalization app for OS 2.0.",
    href: "/products/zenmerch",
    links: [
      { label: "Overview", href: "/products/zenmerch" },
      { label: "Features", href: "/products/zenmerch/features" },
      { label: "Pricing", href: "/products/zenmerch/pricing" },
      { label: "Docs", href: "/products/zenmerch/docs" },
      { label: "Demo", href: "/products/zenmerch/demo" },
    ],
  },
];
---

<header class="sticky top-0 z-40 border-b border-white/10 bg-zinc-950/70 backdrop-blur">
  <div class="container-pad flex h-16 items-center justify-between gap-4">
    <a href="/" class="flex items-center gap-3">
      <img
        src="/images/company/Zenovee-Logo.png"
        alt="Zenovee"
        class="h-8 w-auto select-none"
        loading="eager"
        decoding="async"
      />
      <span class="sr-only">{siteName}</span>
    </a>

    <nav class="hidden items-center gap-6 text-sm text-white/75 md:flex">
      <a class="nav-link hover:text-white" href="/">Home</a>

      <div class="relative">
        <a
          class="nav-link inline-flex items-center gap-1 hover:text-white"
          href="/products"
          aria-haspopup="menu"
          aria-expanded="false"
        >
          Products
          <span class="text-white/50">▾</span>
        </a>

        <div class="nav-dropdown pointer-events-none absolute left-0 top-full z-50 w-[min(640px,92vw)] pt-3 opacity-0 transition">
          <div class="nav-dropdown-panel overflow-hidden rounded-2xl border border-white/10 bg-zinc-950 p-3 shadow-glow">
            <div class="flex items-center justify-between px-2 pb-3">
              <div class="text-xs font-semibold text-white/80">Products</div>
              <a class="text-xs text-white/70 hover:text-white" href="/products">All products →</a>
            </div>

            <div class="grid gap-2">
              {products.map((p) => (
                <div class="rounded-2xl border border-white/10 bg-zinc-900/35 p-3 hover:bg-zinc-900/50">
                  <div class="flex items-start justify-between gap-3">
                    <div>
                      <div class="flex items-center gap-2">
                        <a class="text-sm font-semibold text-white hover:text-white" href={p.href}>{p.name}</a>
                        <span
                          class={`rounded-full px-2 py-1 text-[11px] font-semibold ring-1 ${
                            p.badge === "App"
                              ? "bg-brand-500/15 text-brand-200 ring-brand-500/25"
                              : "bg-white/5 text-white/80 ring-white/10"
                          }`}
                        >
                          {p.badge}
                        </span>
                      </div>
                      <div class="mt-1 text-xs text-white/70">{p.desc}</div>
                    </div>
                    <a class="text-xs text-white/70 hover:text-white" href={p.href}>Open →</a>
                  </div>
                  <div class="mt-3 flex flex-wrap gap-2">
                    {p.links.map((l) => (
                      <a
                        class="rounded-full border border-white/10 bg-zinc-950/40 px-3 py-1.5 text-xs text-white/85 hover:bg-zinc-950/60 hover:text-white"
                        href={l.href}
                      >
                        {l.label}
                      </a>
                    ))}
                  </div>
                </div>
              ))}

              <div class="rounded-2xl border border-white/10 bg-zinc-900/35 p-3 hover:bg-zinc-900/50">
                <div class="flex items-center justify-between gap-3">
                  <a class="text-sm font-semibold text-white hover:text-white" href="/shop">ZenCraft Gifts</a>
                  <span class="rounded-full bg-white/5 px-2 py-1 text-[11px] font-semibold text-white/80 ring-1 ring-white/10">
                    Shop
                  </span>
                </div>
                <div class="mt-2 text-xs text-white/70">
                  A Shopify storefront selling personalized crafting products and curated gift sets.
                </div>
                <div class="mt-3 flex flex-wrap gap-2">
                  <a class="rounded-xl border border-white/10 bg-zinc-950/40 px-3 py-2 text-xs text-white/85 hover:bg-zinc-950/55 hover:text-white" href="/shop">
                    Shop page
                  </a>
                  <a
                    class="rounded-xl border border-brand-500/25 bg-brand-500/15 px-3 py-2 text-xs font-semibold text-brand-100 hover:bg-brand-500/20"
                    href={zencraftShopUrl}
                    target={zencraftShopUrl.startsWith("http") ? "_blank" : undefined}
                    rel={zencraftShopUrl.startsWith("http") ? "noreferrer" : undefined}
                  >
                    Visit shop →
                  </a>
                </div>

              </div>
            </div>
          </div>
        </div>
      </div>

      {nav
        .filter((i) => i.label !== "Home")
        .map((item) => (
          <a class="nav-link hover:text-white" href={item.href}>{item.label}</a>
        ))}
    </nav>

    <div class="hidden items-center gap-2 md:flex">
      <a class="btn btn-ghost" href="/contact">Talk to us</a>
      <a class="btn btn-primary" href="/products/zenmerch">Explore ZenMerch</a>
    </div>

    <button
      id="navToggle"
      class="btn btn-secondary md:hidden"
      type="button"
      aria-haspopup="dialog"
      aria-controls="mobileNav"
      aria-expanded="false"
    >
      Menu
    </button>
  </div>
</header>

<div id="mobileNav" class="fixed inset-0 z-50 hidden" aria-hidden="true">
  <div id="mobileNavOverlay" class="absolute inset-0 bg-black/60 backdrop-blur-sm"></div>
  <div
    id="mobileNavPanel"
    class="absolute left-0 right-0 top-0 border-b border-white/10 bg-zinc-950/95 p-5 pt-20 shadow-glow"
  >
    <div class="container-pad">
      <div class="flex items-center justify-between">
        <div class="text-sm font-semibold text-white/85">Navigation</div>
        <button id="navClose" class="btn btn-secondary" type="button">Close</button>
      </div>

    <div class="mt-5 grid gap-2 text-sm">
      <a class="nav-link block rounded-xl px-3 py-3 text-white/85 hover:bg-white/5 hover:text-white" href="/">Home</a>

      <details class="rounded-xl border border-white/10 bg-white/[0.02]">
        <summary class="cursor-pointer list-none px-3 py-3 text-white/85">
          Products
          <span class="float-right text-white/50">▾</span>
        </summary>
        <div class="grid gap-2 px-3 pb-3">
          <a class="rounded-xl border border-white/10 bg-white/[0.03] px-3 py-2 text-sm text-white/80 hover:bg-white/[0.06]" href="/products">
            All products
          </a>
          {products.map((p) => (
            <div class="rounded-xl border border-white/10 bg-white/[0.03] p-3">
              <a class="font-semibold text-white/90 hover:text-white" href={p.href}>{p.name}</a>
              <div class="mt-2 grid grid-cols-2 gap-2">
                {p.links.map((l) => (
                  <a class="rounded-lg border border-white/10 bg-white/[0.03] px-3 py-2 text-xs text-white/75 hover:bg-white/[0.08]" href={l.href}>
                    {l.label}
                  </a>
                ))}
              </div>
            </div>
          ))}
          <div class="rounded-xl border border-white/10 bg-white/[0.03] p-3">
            <a class="font-semibold text-white/90 hover:text-white" href="/shop">ZenCraft Gifts (Shop)</a>
            <div class="mt-2 grid grid-cols-2 gap-2">
              <a class="rounded-lg border border-white/10 bg-white/[0.03] px-3 py-2 text-xs text-white/75 hover:bg-white/[0.08]" href="/shop">
                Shop page
              </a>
              <a
                class="rounded-lg border border-brand-500/25 bg-brand-500/15 px-3 py-2 text-xs font-semibold text-brand-100 hover:bg-brand-500/20"
                href={zencraftShopUrl}
                target={zencraftShopUrl.startsWith("http") ? "_blank" : undefined}
                rel={zencraftShopUrl.startsWith("http") ? "noreferrer" : undefined}
              >
                Visit shop →
              </a>
            </div>
          </div>
        </div>
      </details>

      {nav
        .filter((i) => i.label !== "Home")
        .map((item) => (
          <a class="nav-link block rounded-xl px-3 py-3 text-white/85 hover:bg-white/5 hover:text-white" href={item.href}>
            {item.label}
          </a>
        ))}
    </div>

      <div class="mt-5 grid grid-cols-2 gap-2">
        <a class="btn btn-secondary w-full" href="/contact">Contact</a>
        <a class="btn btn-primary w-full" href="/products/zenmerch">ZenMerch</a>
      </div>
    </div>
  </div>
</div>

<style>
  .nav-link {
    position: relative;
  }
  .nav-link::after {
    content: "";
    position: absolute;
    left: 0;
    bottom: -6px;
    height: 2px;
    width: 100%;
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 200ms ease;
    background: linear-gradient(90deg, rgba(34,211,238,.9), rgba(14,116,144,.6));
    opacity: 0.9;
  }
  .nav-link:hover::after {
    transform: scaleX(1);
  }

  /* Products dropdown (desktop) */
  nav > .relative:hover .nav-dropdown,
  nav > .relative:focus-within .nav-dropdown {
    opacity: 1;
    transform: translateY(0);
    pointer-events: auto;
  }
  .nav-dropdown {
    transform: translateY(-8px);
  }
  .nav-dropdown-panel {
    background: rgb(9, 12, 16);
  }

  #mobileNavPanel {
    transform: translateY(-8px);
    opacity: 0;
    transition: transform 220ms cubic-bezier(.2,.7,.2,1), opacity 220ms cubic-bezier(.2,.7,.2,1);
  }
  #mobileNav[data-open="true"] #mobileNavPanel {
    transform: translateY(0);
    opacity: 1;
  }
</style>

<script is:inline>
  const toggle = document.getElementById("navToggle");
  const root = document.getElementById("mobileNav");
  const overlay = document.getElementById("mobileNavOverlay");
  const closeBtn = document.getElementById("navClose");

  const open = () => {
    root.classList.remove("hidden");
    root.setAttribute("data-open", "true");
    root.setAttribute("aria-hidden", "false");
    toggle.setAttribute("aria-expanded", "true");
    document.documentElement.style.overflow = "hidden";
  };

  const close = () => {
    root.setAttribute("data-open", "false");
    root.setAttribute("aria-hidden", "true");
    toggle.setAttribute("aria-expanded", "false");
    document.documentElement.style.overflow = "";
    // wait for animation then hide
    window.setTimeout(() => root.classList.add("hidden"), 230);
  };

  toggle?.addEventListener("click", () => {
    const isOpen = root.getAttribute("data-open") === "true";
    isOpen ? close() : open();
  });
  overlay?.addEventListener("click", close);
  closeBtn?.addEventListener("click", close);
  root?.querySelectorAll("a").forEach((a) => a.addEventListener("click", close));
  window.addEventListener("keydown", (e) => {
    if (e.key === "Escape" && root.getAttribute("data-open") === "true") close();
  });
</script>

