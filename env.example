# Copy this file to `.env` (do not commit `.env`)

# Public (safe to expose)
PUBLIC_SITE_NAME=Zenovee
PUBLIC_CONTACT_EMAIL=support@zenovee.com
# ZenCraft Shopify storefront (set this to your shop domain)
PUBLIC_ZENCRAFT_SHOP_URL=

# Contact form delivery (recommended)
# Use Resend on Vercel for reliable email delivery:
# - https://resend.com/
RESEND_API_KEY=
CONTACT_TO_EMAIL=support@zenovee.com
# Optional: must be a verified sender/domain in Resend
CONTACT_FROM_EMAIL=Zenovee <no-reply@zenovee.com>

# Sanity (optional; will be used once Sanity CMS integration is added)
# SANITY_PROJECT_ID=
# SANITY_DATASET=production
# SANITY_API_VERSION=2025-01-01
# SANITY_READ_TOKEN=
# SANITY_WRITE_TOKEN=

